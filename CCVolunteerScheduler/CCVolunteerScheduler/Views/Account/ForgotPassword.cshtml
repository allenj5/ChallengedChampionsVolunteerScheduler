@model CCVolunteerScheduler.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
}

<h2>@ViewBag.Title</h2>
<span>@ViewBag.Message</span>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <br />
    <table align="center">
        <tr>
            <td colspan="2"><p>Enter the email address you used to create the account. Check your email inbox, and click the link in the email you received to reset your password</p></td>
        </tr>
        <tr>
            <td colspan="2">@Html.ValidationSummary("", new { @class = "text-danger" })</td>
        </tr>
        <tr>

            <td>@Html.LabelFor(m => m.Email)</td>
            <td>@Html.EditorFor(m => m.Email, new { @class = "form-control" })</td>
        </tr>
        <tr>

            <td></td>
            <td><input type="submit" value="Save" class="btn btn-default" /></td>
        </tr>
    </table>
    <hr />
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}