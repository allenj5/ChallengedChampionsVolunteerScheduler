@model CCVolunteerScheduler.Models.ChangePhoneViewModel

@using (Html.BeginForm("ChangePhone", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group text-center">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
        <br /><br />
        <div class=" text-center">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @style = "display: inline;" })
            <br />
            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group text-center">
        <div class="">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
