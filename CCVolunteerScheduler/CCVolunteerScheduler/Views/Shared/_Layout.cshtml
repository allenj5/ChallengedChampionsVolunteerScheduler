<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Challenged Champions Volunteer Management</title>
    <meta name="viewport" content="width=device-width">
    @Styles.Render("~/Content/Site.css")
    <!--The statements below pull Bootstrap from MaxCDN-->
    @Styles.Render("~/Bootstrap/bootstrap.css")
    @Scripts.Render("~/Bootstrap/jquery-3.0.0.js")
    @Scripts.Render("~/Bootstrap/bootstrap.js")

    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.8.1/combined/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.8.1/combined/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
    <body>
        <header class="container">
            <div class="row rounded chalchampbackgroundcolor">
                <div class="col-xs-12 col-md-12">
                    <img class="img-fluid img-center" src="~/Images/Challeneged-Champions-Logo.png" alt="Challenged Champions Equestrian Center Logo" />
                </div>
            </div>
            <div class="row rounded chalchampbackgroundcolor">
                <div class="col-xs-12 col-md-12">
                    @RenderSection("navbar", false)
                </div>
            </div>
        </header>
        <div class="container chalchampbackgroundcolor">
            @RenderBody() <!--This will render each page while maintaining the unified look stored in this file-->
        </div>
        <footer class="container">
            <div class="row rounded chalchampbackgroundcolor">
                <div class="col-xs-12 col-md-12">
                    <div id="footer1">© Copyright 1997-2018 Challenged Champions Equestrian Center Ottawa, OH</div>
                    <div id="footer2">Designed and Developed by Jon Allen, Sam Testen, Aziz Aldaghiri, and Cody Frick (University of Findlay CSCI480)</div>
                </div>
            </div>
        </footer>
    </body>
</html>
